@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Online Tools</h1>

    <!-- RSA Başlığı ve Araçları -->
    <h2 class="section-title">🔐 RSA Araçları</h2>
    <div class="row g-4 justify-content-center mb-5">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card-box">
                <div class="icon">🔑</div>
                <h3>Key Generator</h3>
                <a asp-controller="GenerateKeys" asp-action="GenerateKeys" class="btn btn-primary btn-go">Git</a>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card-box">
                <div class="icon">🔒</div>
                <h3>RSA Şifreleme</h3>
                <a asp-controller="RSA" asp-action="EncryptPage" class="btn btn-dark btn-go">Git</a>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card-box">
                <div class="icon">🔓</div>
                <h3>RSA Çözme</h3>
                <a asp-controller="RSA" asp-action="DecryptPage" class="btn btn-success btn-go">Git</a>
            </div>
        </div>
    </div>

    <!-- SHA Başlığı ve Araçları -->
    <h2 class="section-title">🧮 SHA Araçları</h2>
    <div class="row g-4 justify-content-center mb-5">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card-box">
                <div class="icon">🔢</div>
                <h3>SHA256 Hash</h3>
                <a asp-controller="SHA" asp-action="Sha256Hash" class="btn btn-warning btn-go">Git</a>
            </div>
        </div>
    </div>

    <!-- AES Başlığı ve Araçları -->
    <h2 class="section-title">🔐 AES Araçları</h2>
    <div class="row g-4 justify-content-center">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card-box">
                <div class="icon">🔑 🔓</div>
                <h3>AES Şifreleme / Çözme</h3>
                <a asp-controller="AES" asp-action="AesEncrypt" class="btn btn-info btn-go">Git</a>
            </div>
        </div>


    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #1c1c1c, #121212);
    }

    h1 {
        text-align: center;
        font-size: 2.8rem;
        font-weight: 700;
        background: linear-gradient(90deg, #00ddeb, #ff4d4d);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: slideIn 0.8s ease-out;
        margin-bottom: 50px;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 28px;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        border-bottom: 2px dashed #00ddeb;
        padding-bottom: 8px;
        animation: slideIn 0.8s ease-out;
    }

    .card-box {
        background: rgba(30, 30, 30, 0.7);
        border-radius: 16px;
        padding: 24px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 24px rgba(0, 221, 235, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

        .card-box:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 36px rgba(0, 221, 235, 0.3);
            border-color: #00ddeb;
        }

        .card-box h3 {
            font-size: 1.4rem;
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 16px;
        }

    .icon {
        font-size: 3rem;
        margin-bottom: 16px;
        color: #00ddeb;
        transition: transform 0.3s ease;
    }

    .card-box:hover .icon {
        transform: scale(1.15) rotate(5deg);
    }

    .btn-go {
        font-size: 0.9rem;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 8px;
        border: none;
        letter-spacing: 0.7px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        width: 110px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .btn-go::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.25), transparent);
            transition: 0.5s;
        }

        .btn-go:hover::before {
            left: 100%;
        }

    .btn-primary {
        background: #00ddeb;
        color: #121212;
    }

        .btn-primary:hover {
            background: #00b7c3;
            transform: translateY(-2px);
        }

    .btn-dark {
        background: #ff4d4d;
        color: #ffffff;
    }

        .btn-dark:hover {
            background: #e63939;
            transform: translateY(-2px);
        }

    .btn-success {
        background: #28a745;
        color: #ffffff;
    }

        .btn-success:hover {
            background: #218838;
            transform: translateY(-2px);
        }

    .btn-warning {
        background: #f1c40f;
        color: #121212;
    }

        .btn-warning:hover {
            background: #d4ac0d;
            transform: translateY(-2px);
        }

    .btn-info {
        background: #17a2b8;
        color: #fff;
    }

        .btn-info:hover {
            background: #138496;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .row {
        animation: slideIn 0.8s ease-out 0.2s both;
    }

    @@media (max-width: 992px) {
        .card-box {
            padding: 18px;
        }

        .icon {
            font-size: 2.2rem;
        }

        .card-box h3 {
            font-size: 1.2rem;
        }

        .btn-go {
            font-size: 0.8rem;
            padding: 6px 18px;
            width: 90px;
        }
    }

    @@media (max-width: 768px) {
        h1 {
            font-size: 2.2rem;
        }

        .card-box {
            padding: 16px;
        }

        .icon {
            font-size: 2rem;
        }

        .btn-go {
            font-size: 0.75rem;
            padding: 6px 14px;
            width: 80px;
        }
    }
</style>
