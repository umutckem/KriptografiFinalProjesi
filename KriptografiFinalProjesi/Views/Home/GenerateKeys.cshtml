@{
    ViewBag.Title = "Key Generator";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>RSA Key Generator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', sans-serif;
            padding: 60px;
        }

        .container-box {
            background-color: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        h2 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .output-box {
            background: #ecf0f1;
            padding: 20px;
            border-radius: 10px;
            word-wrap: break-word;
            font-size: 14px;
            max-height: 300px;
            overflow-y: auto;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>🔑 RSA Anahtar Üretici</h2>

        <div class="container-box">
            <h4>Public Key</h4>
            <div class="output-box">@ViewBag.PublicKey</div>
        </div>

        <div class="container-box">
            <h4>Private Key</h4>
            <div class="output-box">@ViewBag.PrivateKey</div>
        </div>

        <a href="/Home/Index" class="btn btn-secondary mt-3">⬅ Ana Sayfaya Dön</a>
    </div>

</body>
</html>
