@{
    ViewBag.Title = "RSA Decryption";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>RSA Decryption</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', sans-serif;
            padding: 60px;
        }

        .box {
            background-color: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        .output-box {
            background: #ecf0f1;
            padding: 15px;
            border-radius: 10px;
            word-wrap: break-word;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="box">
            <h2>🔓 RSA Decryption</h2>

            <form method="post">
                <div class="mb-3">
                    <label for="encryptedText" class="form-label">Şifreli Metin (Base64):</label>
                    <textarea class="form-control" id="encryptedText" name="encryptedText" rows="3" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="privateKey" class="form-label">Private Key (Base64):</label>
                    <textarea class="form-control" id="privateKey" name="privateKey" rows="5" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Çöz</button>
            </form>

            @if (ViewBag.DecryptedText != null)
            {
                <hr />
                <h5>✅ Çözülen Metin:</h5>
                <div class="output-box">@ViewBag.DecryptedText</div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <a href="/Home/Index" class="btn btn-secondary mt-3">⬅ Ana Sayfa</a>
        </div>
    </div>

</body>
</html>
