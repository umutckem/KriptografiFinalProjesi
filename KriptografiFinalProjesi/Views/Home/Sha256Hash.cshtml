@{
    ViewBag.Title = "SHA256 Hash";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>SHA256 Hash</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Inter', sans-serif;
            padding: 40px 20px;
        }

        h1 {
            text-align: center;
            font-size: 48px;
            margin-bottom: 40px;
            color: #2c3e50;
        }

        .card {
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
            margin-bottom: 20px;
        }

        .btn-go {
            font-size: 16px;
            padding: 12px 24px;
            border-radius: 10px;
            font-weight: 600;
        }

        .hash-result {
            margin-top: 20px;
            font-size: 16px;
            color: #333;
            word-wrap: break-word;
            white-space: pre-wrap;
            background-color: #f9f9f9;
            padding: 10px;
            border-radius: 8px;
        }

        .btn-back {
            margin-top: 20px;
            font-size: 16px;
            padding: 12px 24px;
            border-radius: 10px;
            background-color: #3498db;
            color: white;
            font-weight: 600;
            text-align: center;
            display: inline-block;
        }

            .btn-back:hover {
                background-color: #2980b9;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>SHA256 Hash Hesaplama</h1>

        <div class="card">
            <form method="post">
                <div class="form-group">
                    <label for="inputText">Metin Girin:</label>
                    <input type="text" id="inputText" name="inputText" class="form-control" placeholder="Metninizi buraya yazın" required />
                </div>

                <button type="submit" class="btn btn-warning btn-go text-white">Hesapla</button>
            </form>

            @if (ViewBag.HashResult != null)
            {
                <div class="hash-result">
                    <strong>SHA256 Hash:</strong> <br />
                    @ViewBag.HashResult
                </div>
            }

            <!-- Ana sayfaya dönme butonu -->
            <a href="@Url.Action("Index", "Home")" class="btn-back">Ana Sayfaya Dön</a>
        </div>
    </div>

</body>
</html>
