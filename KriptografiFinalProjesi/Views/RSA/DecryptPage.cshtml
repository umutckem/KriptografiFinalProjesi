@{
    ViewBag.Title = "RSA Çözme";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RSA Çözme</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <style>
        body {
            background: #121212;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            padding: 40px 20px;
            overflow-x: hidden;
            color: #e0e0e0;
        }

        h2 {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 40px;
            color: #ffffff;
            background: linear-gradient(90deg, #00ddeb, #ff4d4d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: slideIn 0.8s ease-out;
        }

        .box {
            background: #1e1e1e;
            border-radius: 12px;
            padding: 24px;
            border: 1px solid #333;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

            .box:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
                border-color: #00ddeb;
            }

        .form-label {
            color: #ffffff;
            font-weight: 500;
            font-size: 1rem;
        }

        .form-control, .form-control:focus {
            background: #2a2a2a;
            color: #e0e0e0;
            border: 1px solid #444;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #00ddeb;
                box-shadow: 0 0 8px rgba(0, 221, 235, 0.3);
            }

        .output-box {
            background: #2a2a2a;
            padding: 16px;
            border-radius: 8px;
            font-size: 0.9rem;
            color: #e0e0e0;
            border: 1px solid #444;
            word-break: break-all;
            white-space: pre-wrap;
        }

        .btn-primary {
            background: #00ddeb;
            color: #121212;
            font-weight: 600;
            padding: 10px 24px;
            border-radius: 8px;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: #00b7c3;
                transform: translateY(-2px);
            }

        .btn-secondary {
            background: #4b5563;
            color: #ffffff;
            padding: 8px 20px;
            border-radius: 8px;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                background: #374151;
                transform: translateY(-2px);
            }

        .alert-danger {
            background: #7f1d1d;
            border: 1px solid #991b1b;
            color: #f5f5f5;
            border-radius: 8px;
            padding: 12px;
            font-size: 0.9rem;
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@media (max-width: 768px) {
            body

        {
            padding: 30px 15px;
        }

        h2 {
            font-size: 2rem;
        }

        .box {
            padding: 20px;
        }

        .output-box, .alert-danger {
            font-size: 0.85rem;
        }

        .btn-primary, .btn-secondary {
            padding: 8px 16px;
            font-size: 0.9rem;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <h2>🔓 RSA Çözme</h2>

        <div class="box">
            <form method="post">
                <div class="mb-3">
                    <label for="encryptedText" class="form-label">Şifreli Metin (Base64):</label>
                    <textarea class="form-control" id="encryptedText" name="encryptedText" rows="3" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="privateKey" class="form-label">Private Key (Base64):</label>
                    <textarea class="form-control" id="privateKey" name="privateKey" rows="5" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Çöz</button>
            </form>

            @if (ViewBag.DecryptedText != null)
            {
                <hr />
                <h5>✅ Çözülen Metin:</h5>
                <div class="output-box">@ViewBag.DecryptedText</div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <a href="/Home/Index" class="btn btn-secondary mt-3">⬅ Ana Sayfaya Dön</a>
        </div>
    </div>
</body>
</html>