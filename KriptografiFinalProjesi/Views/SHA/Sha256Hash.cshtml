@{
    ViewBag.Title = "SHA256 Hash Hesaplama";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SHA256 Hash Hesaplama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <style>
        body {
            background: #121212;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            padding: 40px 20px;
            overflow-x: hidden;
            color: #e0e0e0;
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 40px;
            color: #ffffff;
            background: linear-gradient(90deg, #00ddeb, #ff4d4d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: slideIn 0.8s ease-out;
        }

        .card {
            background: #1e1e1e;
            border-radius: 12px;
            padding: 24px;
            border: 1px solid #333;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
                border-color: #00ddeb;
            }

        .form-group label {
            color: #ffffff;
            font-weight: 500;
            font-size: 1rem;
            margin-bottom: 8px;
        }

        .form-group input {
            background: #2a2a2a;
            color: #e0e0e0;
            border: 1px solid #444;
            border-radius: 8px;
            padding: 10px;
            transition: all 0.3s ease;
        }

            .form-group input:focus {
                background: #333;
                border-color: #00ddeb;
                box-shadow: 0 0 8px rgba(0, 221, 235, 0.3);
                outline: none;
            }

        .drop-area {
            padding: 20px;
            border: 2px dashed #444;
            border-radius: 8px;
            background: #2a2a2a;
            text-align: center;
            color: #e0e0e0;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

            .drop-area:hover, .drop-area.active {
                background: #333;
                border-color: #00ddeb;
            }

            .drop-area p {
                margin: 0;
                font-size: 0.9rem;
                opacity: 0.8;
            }

        .file-upload {
            display: none;
        }

        .btn-go {
            background: #00ddeb;
            color: #121212;
            font-weight: 600;
            padding: 10px 24px;
            border-radius: 8px;
            border: none;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

            .btn-go:hover {
                background: #00b7c3;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 221, 235, 0.3);
            }

            .btn-go::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: 0.5s;
            }

            .btn-go:hover::before {
                left: 100%;
            }

        .hash-result {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #e0e0e0;
            background: #2a2a2a;
            padding: 16px;
            border-radius: 8px;
            border: 1px solid #444;
            word-break: break-all;
            white-space: pre-wrap;
        }

        .btn-back {
            background: #4b5563;
            color: #ffffff;
            font-weight: 500;
            padding: 8px 20px;
            border-radius: 8px;
            border: none;
            transition: all 0.3s ease;
            margin-top: 20px;
            display: inline-block;
        }

            .btn-back:hover {
                background: #374151;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(107, 114, 128, 0.3);
            }

        .error-message {
            background: #7f1d1d;
            border: 1px solid #991b1b;
            color: #f5f5f5;
            border-radius: 8px;
            padding: 12px;
            font-size: 0.9rem;
            margin-top: 20px;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 768px) {
            body {
                padding: 30px 15px;
            }

            h1 {
                font-size: 2rem;
            }

            .card {
                padding: 20px;
            }

            .drop-area {
                padding: 16px;
            }

            .form-group input, .hash-result, .error-message {
                font-size: 0.85rem;
            }

            .btn-go, .btn-back {
                padding: 8px 16px;
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>🧮 SHA256 Hash Hesaplama</h1>

        <div class="card">
            <form method="post" enctype="multipart/form-data" asp-controller="SHA" asp-action="Sha256Hash">
                <div class="form-group">
                    <label for="inputText">Metin Girin:</label>
                    <input type="text" id="inputText" name="inputText" class="form-control" placeholder="Metninizi buraya yazın" />
                </div>

                <div class="drop-area" id="dropArea">
                    <p>Sürükleyip bırakın veya tıklayın</p>
                    <input type="file" id="fileInput" name="fileInput" class="file-upload" />
                </div>

                <button type="submit" class="btn btn-go">Hesapla</button>
            </form>

            @if (ViewBag.HashResult != null)
            {
                <div class="hash-result">
                    <strong>SHA256 Hash:</strong> <br />
                    @ViewBag.HashResult
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="error-message">@ViewBag.Error</div>
            }

            <a href="@Url.Action("Index", "Home")" class="btn-back">⬅ Ana Sayfaya Dön</a>
        </div>
    </div>

    <script>
        const dropArea = document.getElementById('dropArea');
        const fileInput = document.getElementById('fileInput');

        dropArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropArea.classList.add('active');
        });

        dropArea.addEventListener('dragleave', () => {
            dropArea.classList.remove('active');
        });

        dropArea.addEventListener('drop', (e) => {
            e.preventDefault();
            dropArea.classList.remove('active');
            fileInput.files = e.dataTransfer.files;
            dropArea.querySelector('p').textContent = fileInput.files[0]?.name || 'Sürükleyip bırakın veya tıklayın';
        });

        dropArea.addEventListener('click', () => {
            fileInput.click();
        });

        fileInput.addEventListener('change', () => {
            dropArea.querySelector('p').textContent = fileInput.files[0]?.name || 'Sürükleyip bırakın veya tıklayın';
        });
    </script>
</body>
</html>
