@{
    ViewBag.Title = "Key Generator";
}

@section Styles {
    <style>
        body {
            background: #121212;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            padding: 40px 20px;
            overflow-x: hidden;
            color: #e0e0e0;
        }

        h2 {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 40px;
            color: #ffffff;
            background: linear-gradient(90deg, #00ddeb, #ff4d4d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: slideIn 0.8s ease-out;
        }

        .container-box {
            background: #1e1e1e;
            border-radius: 12px;
            padding: 24px;
            border: 1px solid #333;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            margin-bottom: 24px;
            transition: all 0.3s ease;
        }

            .container-box:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
                border-color: #00ddeb;
            }

        .output-box {
            background: #2a2a2a;
            padding: 16px;
            border-radius: 8px;
            font-size: 0.9rem;
            color: #e0e0e0;
            max-height: 250px;
            overflow-y: auto;
            border: 1px solid #444;
            white-space: pre-wrap;
            word-break: break-all;
            position: relative;
        }

        .form-label {
            color: #ffffff;
            font-weight: 500;
            font-size: 1rem;
        }

        .form-select {
            background: #2a2a2a;
            color: #e0e0e0;
            border: 1px solid #444;
            border-radius: 8px;
            padding: 10px;
            transition: all 0.3s ease;
        }

            .form-select option {
                background: #2a2a2a;
                color: #e0e0e0;
            }

            .form-select:focus {
                background: #333;
                border-color: #00ddeb;
                box-shadow: 0 0 8px rgba(0, 221, 235, 0.3);
            }

        .btn-generate {
            background: #00ddeb;
            color: #121212;
            font-weight: 600;
            padding: 10px 24px;
            border-radius: 8px;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-generate:hover {
                background: #00b7c3;
                transform: translateY(-2px);
            }

        .btn-back {
            background: #4b5563;
            color: #ffffff;
            padding: 8px 20px;
            border-radius: 8px;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                background: #374151;
                transform: translateY(-2px);
            }

        .copy-btn {
            position: absolute;
            top: 12px;
            right: 12px;
            font-size: 1rem;
            border: none;
            background: #444;
            color: #e0e0e0;
            padding: 6px 10px;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .copy-btn:hover {
                background: #00ddeb;
                color: #121212;
            }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 768px) {
            body {
                padding: 30px 15px;
            }

            h2 {
                font-size: 2rem;
            }

            .container-box {
                padding: 20px;
            }

            .output-box {
                font-size: 0.85rem;
            }

            .btn-generate, .btn-back {
                padding: 8px 16px;
                font-size: 0.9rem;
            }
        }
    </style>
}

<div class="container">
    <h2>🔑 RSA Anahtar Üretici</h2>

    <div class="container-box mb-4">
        <form asp-controller="GenerateKeys" asp-action="GenerateKeys" method="post">
            <div class="mb-3">
                <label for="bitLength" class="form-label">Bit Uzunluğu</label>
                <select class="form-select" id="bitLength" name="bitLength" required>
                    <option value="" disabled selected>Bit uzunluğu seçin</option>
                    <option value="1024">1024</option>
                    <option value="2048">2048</option>
                    <option value="4096">4096</option>
                </select>
            </div>
            <button type="submit" class="btn btn-generate">Anahtar Üret</button>
        </form>
    </div>

    @if (ViewBag.PublicKey != null)
    {
        <div class="container-box position-relative">
            <h4>🔓 Public Key</h4>
            <button class="btn copy-btn" onclick="copyToClipboard('publicKey')">📋</button>
            <div class="output-box" id="publicKey">@ViewBag.PublicKey</div>
        </div>
    }

    @if (ViewBag.PrivateKey != null)
    {
        <div class="container-box position-relative">
            <h4>🔐 Private Key</h4>
            <button class="btn copy-btn" onclick="copyToClipboard('privateKey')">📋</button>
            <div class="output-box" id="privateKey">@ViewBag.PrivateKey</div>
        </div>
    }

    <a href="/Home/Index" class="btn btn-back mt-3">⬅ Ana Sayfaya Dön</a>
</div>

@section Scripts {
    <script>
        function copyToClipboard(elementId) {
            const text = document.getElementById(elementId).innerText;
            navigator.clipboard.writeText(text).then(function () {
                const btn = event.target;
                const original = btn.innerHTML;
                btn.innerHTML = "✅";
                setTimeout(() => {
                    btn.innerHTML = original;
                }, 1500);
            }, function (err) {
                alert('Kopyalanamadı!');
            });
        }
    </script>
}
